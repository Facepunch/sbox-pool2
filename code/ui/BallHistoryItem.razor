@using Sandbox;
@using Sandbox.UI;
@using System;

@namespace Facepunch.Pool
@attribute [StyleSheet( "/ui/BallHistory.scss" )]
@inherits Panel

<root>
	<div class="icon @GetIconClass()"></div>
</root>

@code
{
	public PoolBallType BallType { get; set; }
	public PoolBallNumber BallNumber { get; set; }

	private string GetIconClass()
	{
		return BallType switch
		{
			PoolBallType.Black => "black",
			PoolBallType.White => "none",
			_ => $"{BallType.ToString().ToLower()}_{(int)BallNumber}"
		};
	}
}
